@model List<Service>
@{
    ViewData["Title"] = "ServiceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>hizmetlerim</h1>

<table class="table table-bordered">
	<tr>
		<th>#</th>
		<th>hizmet basligi</th>
		<th>aciklama</th>
		<th>ikon url</th>
		<th>sil</th>
		<th>guncelle</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.ServiceId</td>
			<td>@item.Title</td>
			<td>@item.Description</td>
			<td>@item.Icon</td>
			<td><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-danger">sil</a></td>
			<td><a href="/Service/UpdateService/@item.ServiceId" class="btn btn-success">guncelle</a></td>
		</tr>
	}
</table>
<a href="/Service/CreateService/" class="btn btn-primary">yeni hizmet girisi</a>
