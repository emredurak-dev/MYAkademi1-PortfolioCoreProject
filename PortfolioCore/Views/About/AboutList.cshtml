@model List<About>
@{
	ViewData["Title"] = "AboutList";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>hakkimda paneli</h1>
<table class="table table-bordered">
	<tr>
		<th>#</th>
		<th>unvan</th>
		<th>aciklama</th>
		<th>alt aciklama</th>
		<th>yas</th>
		<th>telefon numarasi</th>
		<th>email</th>
		<th>sil</th>
		<th>guncelle</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.AboutId</td>
			<td>@item.Title</td>
			<td>@item.Description</td>
			<td>@item.SubDescription</td>
			<td>@item.Age</td>
			<td>@item.PhoneNumber</td>
			<td>@item.Email</td>
			<td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-danger">sil</a></td>
			<td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-info">guncelle</a></td>
		</tr>
	}
</table>
<a href="/About/CreateAbout/" class="btn btn-primary">yeni hakkimda ekle</a>

